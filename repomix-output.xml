        assert features["width"] == 200  # 300 - 100
        assert features["height"] == 200  # 400 - 200
        assert features["area"] == 40000  # 200 * 200
        assert features["x_center"] == 200  # (100 + 300) / 2
        assert features["y_center"] == 300  # (200 + 400) / 2
