            y0 = float(bbox_elem.get('y0', '0'))
            x1 = float(bbox_elem.get('x1', '0'))
            y1 = float(bbox_elem.get('y1', '0'))
            bbox = (x0, y0, x1, y1)
        
        # Parse image properties
        props_elem = img_elem.find('image_properties')
        width = 0
        height = 0
        dpi = 300
        color_space = 'RGB'
        
