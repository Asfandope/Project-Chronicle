                if info.accuracy:
                    print(f"Accuracy: {info.accuracy*100:.2f}%")
            else:
                print("Usage: python brand_model_manager.py load <brand>")
        
        elif command == "compare":
            print("Loading all models for comparison...")
            for brand in manager.get_available_brands():
