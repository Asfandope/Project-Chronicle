                if self._should_merge_blocks(current_block, next_block):
                    current_block = self._merge_two_blocks(current_block, next_block)
                else:
                    merged_blocks.append(current_block)
                    current_block = next_block
            
            merged_blocks.append(current_block)
            return merged_blocks
            
