        # Create parameter
        parameter = Parameter(
            key=key,
            name=name,
            description=description,
            parameter_type=parameter_type,
            category=category,
            data_type=data_type,
            default_value=default_value,
            validation_rules=validation_rules,
            **kwargs
        )
        
        session.add(parameter)
